<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="custom_edittext">
        <attr name="inputtype" format="string">
            <enum name="text" value="0" />
            <enum name="textEmailAddress" value="1" />
            <enum name="password" value="2" />
            <enum name="number" value="3" />
            <enum name="phone" value="4" />
        </attr>
        <attr name="hint" format="string" />
        <attr name="enabletts" format="boolean"/>
        <attr name="enableshakeanimation" format="boolean"/>
        <!-- as many as you want -->

    </declare-styleable>
    
    
</resources>